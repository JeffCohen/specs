.page-header
  %h1 Sign In

.row
  .col-md-12
    = form_tag sign_in_url, class: 'form-horizontal' do
      .form-group
        = label_tag :password, 'Say The Magic Word:', class: 'control-label col-md-2'
        .col-md-5
          = password_field_tag :password, nil, class: 'form-control'
      = submit_tag 'Let Me In', class: 'btn btn-primary col-md-1 col-md-offset-2'

